{
  "name": "Airtable Editor Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.airtable.com/app*"],
      "css": [],
      "js": ["main.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "https://*.airtable.com/app*",
    "cookies"
  ],
  "web_accessible_resources": ["images/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Airtable Editor Extension"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-...='; object-src 'self'"
}
